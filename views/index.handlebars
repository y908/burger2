<canvas id="canvas"></canvas>
<h1>Burger Eating Time!</h1>

{{!-- <h2>Burgers that are not devoured!</h2> --}}

<ul style="list-style: none;" class="eat">
<h2>Eat Some Burgers!</h2>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Eat!</button>
        </form>

    {{!--     {{> burgers/delete-cat}} --}}
      </li>
    {{/unless}}
  {{/each}}
</ul>



<ul style="list-style: none;" class="ate" align="center">
<div class="container"> 
<h2>You Ate These Burgers!</h2>
  {{#each burgers}}
    {{#if this.devoured}}
      <li align="center">
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST" align="center">
          <input type="hidden" name="devoured" value="false">
         {{!--  <button type="submit">ATE...YUM!</button> --}}
        </form>
      </li>
    {{/if}}
  {{/each}}
</div>
</ul>


<form class="create-update-form" action="burgers/create" method="POST" align="center">
<h2>Add a Burger</h2>
  <div class="form-group">
    <label for="ca" class="name">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit" name="devoured" value="0">Add Burger</button>
</form>

